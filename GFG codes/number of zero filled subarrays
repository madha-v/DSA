// leetcode 2348

class Solution {
public:
    long long zeroFilledSubarray(vector<int>& nums) {
        int n=nums.size();
      long long valid=0;
       long long len=0;
     long long c=0;
      for(int i=0;i<n;i++)
      {
        if(nums[i]==0)
        {
            len++;
            valid+=len;
        }
        else
        {
            len=0;
        }
      }
       return c+valid; 
    }
};
