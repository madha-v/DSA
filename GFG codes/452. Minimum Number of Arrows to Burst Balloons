class Solution {
public:
    int findMinArrowShots(vector<vector<int>>& points) {
        int n = points.size();
        if(n == 0) return 0;

        // Sort by ending coordinate
        sort(points.begin(), points.end(), [](vector<int>& a, vector<int>& b){
            return a[1] < b[1];
        });

        int arrows = 1; // at least one arrow needed
        int end = points[0][1];

        for(int i = 1; i < n; i++) {
            if(points[i][0] > end) {
                arrows++;            // need new arrow
                end = points[i][1];  // update end
            }
        }
        return arrows;
    }
};
